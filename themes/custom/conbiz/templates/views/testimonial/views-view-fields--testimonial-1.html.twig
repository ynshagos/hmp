<article class="testimonial-node-1">      
   <div class="testimonial-content">
      <div class="content-body">
         <div class="content-inner">
            <div class="quote">{{ fields.body.content|striptags|trim }}</div>      
            <div class="info">
               <h3 class="name">{{ fields.field_testimonial_name.content }}</h3>
               <div class="job">{{ fields.field_testimonial_job.content }}</div>   
            </div>  
         </div>
      </div>
      <div class="avatar">
         {{ fields.field_testimonial_avatar.content }}
      </div>
   </div>
</article>
  